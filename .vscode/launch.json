    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch via NPX",
            "request": "launch",
            "runtimeArgs": [
                "ts-node",
                "${workspaceFolder}\\src\\cli\\demo.ts"
            ],
            "runtimeExecutable": "npx",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "npx ts-node ${workspaceFolder}\\src\\cli\\demo.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}